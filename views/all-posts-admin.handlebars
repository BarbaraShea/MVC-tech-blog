<div class="row">
  <div class="col-auto">
    <h2>Welcome Dashboard!</h2>
  </div>
</div>
  {{#if posts.length}}
  <div class="col-md-6">
    <h3>Current Posts:</h3>

    {{#each posts as |post|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/post/{{post.id}}">{{post.title}}</a></h4>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

