

<div class="text-center">
  <h2>{{post.title}}</h2>
  <p>Created by {{post.user.username}} on {{format_date post.dateCreated}}</p>
  <p>{{post.contents}} </p>

<div class="comments">
    {{#each post.comments}}
    <section class="comment">
        <div class="meta">
            {{user.username}} on {{format_date dateCreated}}
        </div>
        <div class="text">
            {{content}}
        </div>
    </section>
    {{/each}}
</div>

<form class="form" id="new-comment-form">
    <input class="form-input" type="hidden" value={{post.id}} name="post-id"/>
    <p><strong>Comment:</strong></p>
    <textarea class="form-input" id="comment-body" name="comment-body"></textarea>
    <button type="submit" class="btn btn-primary">Submit:</button>
</form>
</div>







<script src="/js/comment.js"></script>
