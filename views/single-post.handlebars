<div class="text-center">
  <h2>{{post.title}}</h2>
  <p>Created by {{user.username}} on {{format_date post.dateCreated}}</p>
  <p>{{post.contents}} </p>
<div class="form" id="new-comment-form">
    <input class="form-input" type="hidden" id={{post.id}} name={{post.id}}/>
    <p><strong>Comment:</strong></p>
    <textarea class="form-input" id="comment-body" name="comment-body"></textarea>
    <button type="submit" class="btn btn-primary">Submit:</button>
</div>
</div>

<script src="/js/comment.js"></script>